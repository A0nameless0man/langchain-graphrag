{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "sophisticated-app-indexing",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/sophisticated-app/app/main.py",
            "justMyCode": false,
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "indexing/experiment=azure_openai_gpt4o"
            ]
        },
        {
            "name": "simple-app-indexing",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/simple-app/app/main.py",
            "justMyCode": false,
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "indexer",
                "--input-dir",
                "${workspaceFolder}/examples/input-data",
                "--output-dir",
                "${workspaceFolder}/tmp",
                "--prompts-dir",
                "${workspaceFolder}/examples/prompts",
                "--cache-dir",
                "${workspaceFolder}/tmp/cache"
            ]
        },
        {
            "name": "simple-app-global-query",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/simple-app/app/main.py",
            "justMyCode": false,
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "global-query",
                "--output-dir",
                "${workspaceFolder}/tmp",
                "--prompts-dir",
                "${workspaceFolder}/examples/prompts",
                "--cache-dir",
                "${workspaceFolder}/tmp/cache",
                "--query",
                "What are the top themes in this story?"
            ]
        }
    ]
}